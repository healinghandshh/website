      <div class="radio">
        <div>
          <label for="admin">Administrator:</label>
          <input type="text" name="admin_text" />
        </div>
        <input type="radio" name="position" id="radio-admin" value="" />
      </div>
      <div class="radio">
        <div>
          <label for="other_text">Other:</label>
          <input type="text" name="other_text" id="other_text" />
        </div>
        <input type="radio" name="position" id="radio-other" value="" />
      </div>
    </RadioGroup>

    <fieldset>
      <legend>Personal Details</legend>
