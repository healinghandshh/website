<Layout section="application">
  <form class="apply">
    <RadioGroup
      class="top-level role"
      name="position"
      label="Which role are you applying for?"
      radios={[
        { id: "rn", text: "Registered Nurse" },
        { id: "pt", text: "Physical Therapist" },
        { id: "slp", text: "Speech-Language Pathologist" },
        { id: "lpnlvn", text: "LPN/LVN" },
        { id: "pta", text: "PTA" },
        { id: "hhacna", text: "HHA/CNA" },
        { id: "ot", text: "Occupational Therapist" },
        { id: "msw", text: "Medical Social Worker" },
        { id: "cota", text: "COTA" },
      ]}
