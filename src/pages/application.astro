        label="Full Name"
        name="fullName"
        type="text"
        placeholder="Johnathan Doevert-Hudson"
        autocomplete="name"
      />
      <Input
        label="Maiden Name"
        name="maidenName"
        type="text"
        placeholder="Doevert"
        autocomplete="off"
      />
      <Input
        label="Date of Birth"
        name="dob"
        type="date"
        placeholder="01/01/2001"
        autocomplete="bday"
      />
      <Input
        label="SSN"
        name="ssn"
        type="text"
        pattern={/^(0|[1-9][0-9]*)$/}
        placeholder="123 - 21 - 1234"
      />

      <Input
        label="Address"
        name="address"
        type="text"
        placeholder="123 Main St"
        autocomplete="street-address"
      />
      <Input
        label="Apt #"
        name="apt"
        type="text"
        placeholder="123"
        autocomplete="on"
        required={false}
      />
      <Input
        label="City"
        name="city"
        type="text"
        placeholder="Atlanta"
        autocomplete="address-level2"
      />
      {
        /*
           Change to state dropdown.
           <Input label='State' name='State' type='text' placeholder='Atlanta' autocomplete='address-level1' />*/
      }
      <Input
        label="Zipcode"
        name="zipcode"
        type="text"
        placeholder="12345"
        autocomplete="postal-code"
      />
      <Input
        label="Gender"
        name="gender"
        type="text"
        placeholder="..."
